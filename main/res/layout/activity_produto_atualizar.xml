<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pedro.floatingbutton.ProdutoAtualizar">


    <TextView
        android:id="@+id/textView_produto_atualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/produto_atualizar_titulo"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_produto_atualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/textView_produto_atualizar"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/textView_produto_atualizar" />

    <Button
        android:id="@+id/button_produto_atualizar"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="onClickProduto"
        android:text="@string/produto_atualizar_button"
        app:layout_constraintBottom_toTopOf="@+id/editText_produto_atualizar"
        app:layout_constraintLeft_toRightOf="@+id/editText_produto_atualizar"
        app:layout_constraintTop_toBottomOf="@+id/editText_produto_atualizar"
        app:layout_constraintVertical_bias="0.505"
        tools:layout_editor_absoluteX="233dp" />

</android.support.constraint.ConstraintLayout>
